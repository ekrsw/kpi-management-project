# Database
DATABASE_HOST=postgres
DATABASE_USER=kpi_admin
DATABASE_PASSWORD=Change_This_Strong_Password_123!
DATABASE_NAME=kpi_database
DATABASE_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
# Generate these using: openssl rand -hex 32
SECRET_KEY=your_production_secret_key_here_min_32_chars_long
REFRESH_SECRET_KEY=your_production_refresh_secret_key_here_min_32_chars_long

# FastAPI
API_HOST=0.0.0.0
API_PORT=8000

# Nginx
NGINX_PORT=443  # Changed to HTTPS port
SSL_CERTIFICATE_PATH=/etc/nginx/ssl/cert.pem
SSL_CERTIFICATE_KEY_PATH=/etc/nginx/ssl/key.pem

# Production Settings
ENVIRONMENT=production
ALLOWED_HOSTS=your-domain.com,www.your-domain.com
CORS_ORIGINS=https://your-domain.com
